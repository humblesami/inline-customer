<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="InlineCustomerMobile" t-inherit="point_of_sale.MobileOrderWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('switchpane')]" position="before">
            <div class="searchbox-client top-content-center">
                <input class="search_customers" />
                <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.min.css" rel="stylesheet"/>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.min.js">
                </script>
            </div>
        </xpath>
    </t>

    <t t-extend="point_of_sale.MobileOrderWidget">
        <t t-jquery="div.switchpane" t-operation="before">
            <div class="searchbox-client top-content-center">
                <input class="search_customers" />
                <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.min.css" rel="stylesheet"/>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.min.js">
                </script>
            </div>
        </t>
    </t>

</templates>
